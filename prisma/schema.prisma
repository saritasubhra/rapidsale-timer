// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}


model Timer {
  id              String   @id @default(cuid())
  shop            String

  // Content
  name            String
  title           String
  subheading      String?
  buttonText      String
  link            String?

  timerType       String   // "date" | "fixed"
  endDate         String?
  endTime         String?
  fixedMinutes    String?

  timerLabels     Json

  // Design
  bgColor         String
  borderRadius    String
  borderSize      String
  borderColor     String
  paddingTopBottom String
  paddingInside   String
  fontFamily      String
  titleSize       String
  titleColor      String

  // Placement
  productTarget   String
  geoTarget       String

  type             String   // "product-page" | "top-bottom-bar"
  status           String   @default("active") // "active", "expired", or "disabled"
  expiresAt        DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

}
