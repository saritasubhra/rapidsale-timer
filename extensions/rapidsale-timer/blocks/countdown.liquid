{% if block.settings.timer_id != blank %}
  <div
    class="rapidsale-timer"
    data-timer-id="{{ block.settings.timer_id }}"
  >
    <div class="rapidsale-loading">Loading countdownâ€¦</div>
  </div>

  {{ 'timer.js' | asset_url | script_tag }}
{% else %}
  {% if request.design_mode %}
    <div style="padding:12px;border:1px dashed #ccc;">
      <strong>RapidSale Countdown Timer</strong><br>
      Select a timer in block settings.
    </div>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "RapidSale Countdown Timer",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "timer_id",
      "label": "Timer ID",
      "info": "Paste the Timer ID from the app"
    }
  ]
}
{% endschema %}
